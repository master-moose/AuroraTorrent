{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "AuroraTorrent",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": true
            },
            "http": {
                "all": false,
                "request": true,
                "scope": [
                    "http://localhost:3000/*",
                    "http://127.0.0.1:3000/*"
                ]
            },
            "fs": {
                "all": false,
                "readFile": false,
                "writeFile": false,
                "readDir": false,
                "copyFile": false,
                "createDir": false,
                "removeDir": false,
                "removeFile": false,
                "renameFile": false,
                "exists": false
            },
            "path": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "AuroraTorrent",
                "width": 1280,
                "height": 800,
                "minWidth": 900,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000; media-src 'self' http://127.0.0.1:3000 http://localhost:3000 blob:;"
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.auroratorrent.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "shortDescription": "A modern BitTorrent client with streaming support",
            "longDescription": "AuroraTorrent is a fast, modern BitTorrent client built with Rust and Tauri. It features a beautiful UI, streaming support for media files, and cross-platform compatibility.",
            "category": "Utility",
            "copyright": "Copyright Â© 2024 AuroraTorrent",
            "deb": {
                "depends": []
            },
            "macOS": {
                "minimumSystemVersion": "10.15",
                "frameworks": [],
                "exceptionDomain": "",
                "signingIdentity": null,
                "providerShortName": null,
                "entitlements": null
            },
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "updater": {
            "active": false
        }
    }
}
